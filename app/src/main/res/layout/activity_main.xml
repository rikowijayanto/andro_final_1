<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/activity_main"
    android:orientation="vertical">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

          <HorizontalScrollView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scrollbarAlwaysDrawHorizontalTrack="false"
              android:scrollbars="none">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="120dp"
                   android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="390dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/banner_fix"
                        />

                    <ImageView
                        android:layout_width="390dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/banner_fix"
                        />

                    <ImageView
                        android:layout_width="390dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/banner_fix"
                        />

               </LinearLayout>

          </HorizontalScrollView>

          <TableLayout
              android:layout_width="match_parent"
              android:layout_height="160dp"
              android:stretchColumns="1">

               <TableRow>
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/banner_fix"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/banner_fix"
                        />
               </TableRow>

               <TableRow>
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/banner_fix"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/banner_fix"
                        />
               </TableRow>



          </TableLayout>


          <TableLayout
              android:layout_width="match_parent"
              android:layout_height="160dp"
              android:stretchColumns="1">

               <TableRow>
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/banner_fix"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/banner_fix"
                        />
               </TableRow>

               <TableRow>
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/banner_fix"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/banner_fix"
                        />
               </TableRow>



          </TableLayout>


          <TableLayout
              android:layout_width="match_parent"
              android:layout_height="160dp"
              android:stretchColumns="1">

               <TableRow>
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/banner_fix"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/banner_fix"
                        />
               </TableRow>

               <TableRow>
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/banner_fix"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/banner_fix"
                        />
               </TableRow>



          </TableLayout>


          <HorizontalScrollView
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:scrollbarAlwaysDrawHorizontalTrack="false"
              android:scrollbars="none">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="80dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="8dp">


                    <Button
                        android:id="@+id/btn_fiksi"
                        style="@style/ButtonText"
                        android:background="@drawable/buttonmerah"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="8dp"
                        android:text="Fiksi" />

                    <Button
                        android:id="@+id/btn_nonfiksi"
                        style="@style/ButtonText"
                        android:background="@drawable/buttonhijau"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="8dp"
                        android:text="Non Fiksi"/>

                    <Button
                        android:id="@+id/btn_majalah"
                        style="@style/ButtonText"
                        android:background="@drawable/buttonbiru"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="8dp"
                        android:text="Majalah" />

                    <Button
                        android:id="@+id/btn_komik"
                        style="@style/ButtonText"
                        android:background="@drawable/buttonungu"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="8dp"
                        android:text="Komik" />

                    <Button
                        android:id="@+id/btn_koran"
                        style="@style/ButtonText"
                        android:background="@drawable/buttonorange"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="Koran" />

               </LinearLayout>


          </HorizontalScrollView>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rv_shop"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   tools:listitem="@layout/item_row_shop" />
          </LinearLayout>



     </LinearLayout>






</ScrollView>